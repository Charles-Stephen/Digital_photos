@model Digital_photos.category

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/Backend_Layout.cshtml";
}


<div id="layoutSidenav_content">
    <main>
        <div class="container-fluid px-4">
            <h2 class="mt-4">>Edit</h2>

            <h3 class="ms-4 mt-2">Category</h3>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">

                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.id)

                    <div class="form-group">
                        Category
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Category_Name, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Category_Name, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Submit" class="btn btn-outline-dark" />

                            <a href="~/Category/Index">
                                <input type="button" value="Cancel" class="btn btn-outline-dark" />
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </main>