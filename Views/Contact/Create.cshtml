
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/Backend_Layout.cshtml";
}



<div id="layoutSidenav_content">
    <main>
        <div class="container-fluid px-4">
            <h2 class="mt-4">>Create</h2>

            <h3 class="ms-4 mt-2">Contact</h3>

            <form class="theme-form" action="~/Home/Contact" method="post">
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <input type="text" name="name" placeholder="Name" required>
                </div>
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <input type="email" name="email" placeholder="Email" required>
                </div>
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <input type="tel" name="phone" placeholder="Phone" required>
                </div>
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <input type="text" name="subject" placeholder="Subject (Optional)">
                </div>
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <textarea name="message" placeholder="Type your question" required rows="8"></textarea>
                </div>
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <input type="submit" value="Submit" class="btn btn-outline-dark" />

                    <a href="~/Contact/Index">
                        <input type="button" value="Cancel" class="btn btn-outline-dark" />
                    </a>
                </div>
            </form>
        </div>
    </main>