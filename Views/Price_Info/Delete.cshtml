@model Digital_photos.Price_Info

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/Backend_Layout.cshtml";
}


<div id="layoutSidenav_content">
    <main>
        <div class="container-fluid px-4">
            <h2 class="mt-4">Delete</h2>

            <h2 class="ms-4 mt-2">Price Information</h2>

            <h3>Are you sure you want to delete this?</h3>
            <div>
                <h4>Price_Info</h4>
                <hr />
                <dl class="dl-horizontal">
                    <dt>
                        Size
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Size)
                    </dd>

                    <dt>
                        Price
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Price)
                    </dd>

                    <dt>
                        Sale Price
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Sale_Price)
                    </dd>

                </dl>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="submit" value="Delete" class="btn btn-outline-dark" />

                        <a href="~/Price_Info/Index">
                            <input type="button" value="Cancel" class="btn btn-outline-dark" />
                        </a>
                    </div>
                }
            </div>
        </div>
    </main>