@model Digital_photos.Photograph

@{
    ViewBag.Title = "Print";
    Layout = "~/Views/Home/Frontend_Layout.cshtml";
}
<div class="page-header contact padT100 padB70">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <!-- Theme Heading -->
                <div class="theme-heading">
                    <h1>My Profile</h1>
                    <h3><span class="heading-shape">My <strong>Profile</strong></span></h3>
                </div>
                <!-- Theme Heading -->
                <div class="breadcrumb-box">
                    <ul class="breadcrumb text-center colorW marB0">
                        <li>
                            <a href="~/Home/Index">Home</a>
                        </li>
                        <li class="active">Profile</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="clear"></div>
<!--//================Contact start==============//-->
<div class="padB100 padT100">
    <div class="container" style="width:100%">

        <!-- Theme Heading -->
        <div class="theme-heading">

            <h1>@Session["name"]</h1>
            <h3><span class="heading-shape">@Session["name"]</span></h3>
        </div>
        <!-- Theme Heading -->
    </div>
    <div>
        <form action="~/Print/Create" id="photoform" method="post">
            <div class="modal-body">
                @if (Session["phto"] != null)
                {
                    <div class="form-group">
                        <label>Photograph</label>
                        <select name="cars" id="cars">
                            <option>@ViewBag.tid</option>


                            <option value="@Model.id">kk</option>

                        </select>
                    </div>

                    <style>
                        label.radiolabel input {
                            position: inherit !important;
                            visibility: visible !important;
                            margin-right: 20px;
                        }
                    </style>

                    <div class="form-group">
                        <label>Size</label><br />
                        <label class='radiolabel'><input type="radio" name="selectedsize" value="None" onclick="calculateTotal()" />Select Your Desired Style</label><br />
                        <label class='radiolabel'><input type="radio" name="selectedsize" value="1" onclick="calculateTotal()" />3x5 - (12 pics per pack) Rs.80/-</label><br />
                        <label class='radiolabel'><input type="radio" name="selectedsize" value="2" onclick="calculateTotal()" />4x6 - (12 pics per pack) Rs.110/-</label><br />
                        <label class='radiolabel'><input type="radio" name="selectedsize" value="3" onclick="calculateTotal()" />5x7 - Rs.145/-</label><br />
                        <label class='radiolabel'><input type="radio" name="selectedsize" value="4" onclick="calculateTotal()" />8x8 - Rs.170/-</label><br />
                        <label class='radiolabel'><input type="radio" name="selectedsize" value="5" onclick="calculateTotal()" />A0 - Rs.495/-</label><br />
                        <label class='radiolabel'><input type="radio" name="selectedsize" value="6" onclick="calculateTotal()" />A1 - Rs.425/-</label><br />
                        <label class='radiolabel'><input type="radio" name="selectedsize" value="7" onclick="calculateTotal()" />A2 - Rs.350/-</label><br />
                        <label class='radiolabel'><input type="radio" name="selectedsize" value="8" onclick="calculateTotal()" />A3 - Rs.275/-</label><br />
                        <label class='radiolabel'><input type="radio" name="selectedsize" value="9" onclick="calculateTotal()" />A4 - Rs.195/-</label><br />
                    </div>

                    <div id="dt" class="form-group">
                        <label>Quantity</label>
                        <select id="quantitywant" name='quantitywant' onchange="calculateTotal()">
                            <option value="None">Select Quantity</option>
                            <option value="1"> 1 </option>
                            <option value="2"> 2 </option>
                            <option value="3"> 3 </option>
                            <option value="4"> 4 </option>
                            <option value="5"> 5 </option>
                            <option value="6"> 6 </option>
                            <option value="7"> 7 </option>
                            <option value="8"> 8 </option>
                            <option value="9"> 9 </option>
                            <option value="10"> 10 </option>
                            <option value="11"> 11 </option>
                            <option value="12"> 12 </option>
                        </select>
                    </div>


                    <div class="form-group">
                        <label>Total price</label>
                        <input id="totalPrice" placeholder="Total Price" name="totalPrice" readonly />
                    </div>

                    <div class="form-group">
                        <label>Credit Card No.</label>
                        <input placeholder="Enter Credit Card No." name="creditNo" required />
                    </div>
                }
                else if (Session["phto"] == null)
                {
                    <h3 class="text-center"> Please add some images on your profile before ordering! </h3>
                }
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                @if (Session["phto"] != null)
                {
                    <button type="submit" class="btn btn-primary">Print</button>
                }
                @if (Session["phto"] == null)
                {
                    <button disabled type="submit" class="btn btn-primary">Print</button>
                }
            </div>
            <p class="text-danger">@ViewBag.er</p>
        </form>
    </div>
</div>